# ===========================================
# AI Phone Bot SaaS - Environment Configuration
# ===========================================

# Server Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
DASHBOARD_URL=http://localhost:3001

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/ai-phone-bot-saas

# Redis Configuration (for caching and queues)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+972XXXXXXXXX

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=./config/google-credentials.json
GOOGLE_PROJECT_ID=your-google-project-id

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL_FAST=gpt-3.5-turbo
OPENAI_MODEL_SMART=gpt-4-turbo-preview

# Stripe Configuration (for billing)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=AI Phone Bot <noreply@yourdomain.com>

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=change-this-password

# Cost Configuration (in ILS)
COST_PER_MINUTE_TWILIO=0.02
COST_PER_MINUTE_GOOGLE_STT=0.016
COST_PER_MINUTE_GOOGLE_TTS=0.016
COST_PER_1K_TOKENS_GPT35=0.002
COST_PER_1K_TOKENS_GPT4=0.06

# Feature Flags
ENABLE_CALL_RECORDING=false
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_AUTO_FAQ_LEARNING=true
